<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Album Name:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/albumnameinaddphotos"
            android:id="@+id/albumnameInAddPhotos" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/removechildfromthiscontainer"
        android:layout_weight="0.07">

        <ImageView
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/addpicsInAddPhotos"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/addpics" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Go on and add images!"
            android:id="@+id/textView6" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:id="@+id/gridviewHolder">

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="121dp"
            android:id="@+id/gridViewInAddPhotos"
            android:horizontalSpacing="3dp"
            android:numColumns="4" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addmorepicsContainer">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addmorepicsInAddPhotos"
            android:layout_weight="0.3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/addmorepicstext"
            android:id="@+id/addmorepicstextInAddPhotos"
            android:layout_weight="0.7" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:id="@+id/cancelInAddPhotos"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            android:id="@+id/addInAddPhotos"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Users/ssirigin/Downloads/projectMAD1/projectMAD1/ParseStarterProject/src/main/res/layout/addphotos.xml -->